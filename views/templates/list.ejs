<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee List</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
    <h1>Employee List</h1>
    <table border="1" cellspacing="0" cellpadding="8">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Department</th>
          <th>Salary</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.employeeID %></td>
            <td><%= employee.firstName %></td>
            <td><%= employee.lastName %></td>
            <td><%= employee.email %></td>
            <td><%= employee.workingDepartment %></td>
            <td><%= employee.salary %></td>
            <td>
                <form action="/employee/delete/<%= employee.employeeID %>?_method=DELETE" method="POST">
                  <button type="submit" style="background-color: #e74c3c; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;">Delete</button>
                </form>
            </td>        
          </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/employee">Go Back</a>
  </body>  
</html>